{{#if data}}
<!-- Post Content Column -->
<div class="col-lg-8">
  <!-- Title -->
  <h1 class="mt-4">
    {{data.title}}
  </h1>

  <!-- Author -->
  <p class="lead">
    by
    <a href="/{{data.artist.name}}">
      {{data.artist.name}}
    </a>
    | Release Date : {{data.release_date}}
    | Album: {{data.album.title}}
  </p>

  <hr />

  <!-- Preview Image -->
  <img class="img-fluid rounded" src="{{data.album.cover_big}}" alt="" />

  <hr />
  <!-- Post Content -->
  <p class="lead">
<iframe scrolling="no" frameborder="0" allowTransparency="true" src="https://www.deezer.com/plugins/player?format=classic&autoplay=false&playlist=true&width=700&height=350&color=ff0000&layout=dark&size=medium&type=tracks&id={{data.id}}&app_id=1" width="700" height="350"></iframe></div>
{{else}}
{{> home/404page}}
{{/if}}